<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Gambar Artikel -->
        <ImageView
            android:id="@+id/imageArtikel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/semeru" />

        <!-- Konten Artikel -->
        <LinearLayout
            android:id="@+id/linearTextContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageArtikel"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- Judul Artikel -->
            <TextView
                android:id="@+id/titleArtikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Perlengkapan Outdoor Paling Favorit di Indonesia, Suka yang Mana?"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                android:textColor="@android:color/black" />

            <!-- Penulis dan Tanggal -->
            <TextView
                android:id="@+id/subTitleArtikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Franz Simon"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Jumlah Like dan Tanggal -->
            <TextView
                android:id="@+id/likesArtikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Likes | 10/10/2024"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
