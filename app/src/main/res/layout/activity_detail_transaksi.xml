<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".riwayat.detail_transaksi">

    <!-- Background atas -->
    <View
        android:id="@+id/background_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#016236"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CardView untuk Detail Transaksi -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Detail Transaksi"
                android:textSize="20sp"
                android:textStyle="bold" />


            <!-- Informasi Transaksi -->
            <TextView
                android:id="@+id/tvNoPesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No Pesanan"
                android:textColor="#6C7278"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNoPesananValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18273821789379231"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nama"
                android:textColor="#6C7278"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvNamaValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Franz Simon"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGunung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gunung"
                android:textColor="#6C7278"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvGunungValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merbabu"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvJalur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Jalur Pendakian"
                android:textColor="#6C7278"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvJalurValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWaktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Waktu Pendakian"
                android:textColor="#6C7278"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvWaktuValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rabu, 27 November 2024"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pembayaran"
                android:textColor="#6C7278"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvPembayaranValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QRIS"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Tombol Batal -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FF0000"
                android:padding="12dp"
                android:text="Batalkan Pesanan"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
