<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="220dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Gambar Gunung -->
        <ImageView
            android:id="@+id/imageGunung"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/semeru" />

        <!-- Nama Gunung dan Ikon Love -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Nama Gunung -->
            <TextView
                android:id="@+id/tvNamaGunung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gunung Merbabu"
                android:textStyle="bold"
                android:textSize="14sp" />

            <!-- Ikon Love -->
            <ImageView
                android:id="@+id/iconLove"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart_outline"
                android:contentDescription="Ikon Love"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Lokasi Gunung -->
        <TextView
            android:id="@+id/tvLokasiGunung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Jawa Tengah"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
